  description: |
    Compute with remote compute networking.
  disable_constraints: False
  CountDefault: 0
  networks:
    InternalApi{{ REMOTE_INDEX }}:
      subnet: internal_api{{ REMOTE_INDEX }}_subnet
    Storage{{ REMOTE_INDEX }}:
      subnet: storage{{ REMOTE_INDEX }}_subnet
    Tenant{{ REMOTE_INDEX }}:
      subnet: tenant{{REMOTE_INDEX}}_subnet
